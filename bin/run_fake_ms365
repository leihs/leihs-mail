#!/usr/bin/env bash

set -euo pipefail
set -x

SOURCE_DIR="$(cd -- "$(dirname "${BASH_SOURCE}")" > /dev/null 2>&1 && pwd -P)"
PROJECT_DIR="$(cd -- "$SOURCE_DIR" ; cd .. > /dev/null 2>&1 && pwd -P)"
cd $PROJECT_DIR
./bin/env/ruby-setup

LEIHS_MAIL_FAKE_MS365_PORT=${LEIHS_MAIL_FAKE_MS365_PORT:-9365}

echo "fake MS365 server port: $LEIHS_MAIL_FAKE_MS365_PORT"

bundle exec ruby $SOURCE_DIR/fake_ms365_server.rb
